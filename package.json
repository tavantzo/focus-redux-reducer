{
  "name": "focus-redux-reducer",
  "version": "2.0.3",
  "description": "A Redux reducer focused on productivity.",
  "readme": "./README.md",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf ./dist && rm -rf ./docs",
    "build": "npm-run-all --parallel build:*",
    "build:main": "tsc",
    "build:umd": "webpack --output-filename index.umd.js",
    "build:umd.min": "webpack --output-filename index.umd.min.js -p",
    "build:docs": "typedoc --out ./docs src/Reducer.ts",
    "lint": "eslint ./src",
    "commit": "git-cz",
    "test": "cross-env NODE_ENV=test mocha --bail -R spec --require ts-node/register test/**/*.ts",
    "test:watch": "mocha -R spec --require ts-node/register --experimentalDecorators=true -w test/**/*.ts",
    "check-coverage": "nyc check-coverage --statements 100 --branches 87 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tavantzo/focus-redux-reducer.git"
  },
  "keywords": [
    "reducer",
    "redux",
    "react",
    "react-native"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "author": "George Tavantzopoulos <g.tavantzopoulos@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tavantzo/focus-redux-reducer/issues"
  },
  "homepage": "https://github.com/tavantzo/focus-redux-reducer#readme",
  "dependencies": {
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.0",
    "@types/react": "^16.3.14",
    "@types/react-redux": "^6.0.0",
    "awesome-typescript-loader": "^5.0.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^7.1.4",
    "chai": "^4.2.0",
    "codecov.io": "0.1.6",
    "coffeescript": "^2.3.2",
    "commitizen": "2.9.6",
    "cross-env": "4.0.0",
    "cz-conventional-changelog": "2.0.0",
    "eslint": "^4.19.1",
    "ghooks": "2.0.0",
    "json-loader": "0.5.4",
    "mocha": "^5.2.0",
    "npm-run-all": "^4.1.3",
    "nyc": "10.3.0",
    "react": "^15.6.1",
    "react-redux": "^5.0.6",
    "source-map-loader": "^0.2.3",
    "ts-node": "^6.0.3",
    "typescript": "^2.8.3",
    "typescript-eslint-parser": "^15.0.0",
    "webpack": "stable",
    "webpack-cli": "^2.1.3"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run prebuild && npm test && npm run check-coverage && npm run build"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": true,
    "instrument": true,
    "extension": [
      ".ts",
      ".js"
    ],
    "include": [
      "src/*.ts"
    ],
    "all": true
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended"
    ],
    "parser": "typescript-eslint-parser",
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "env": {
      "es6": true
    }
  },
  "directories": {
    "test": "test"
  }
}
